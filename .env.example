# Secret key for Flask session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Password hash for authentication
# Generate with: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your-password'))"
# IMPORTANT: Escape $ characters as $$ for Docker Compose (e.g., scrypt:32768:8:1$$salt$$hash)
PASSWORD_HASH=scrypt:32768:8:1$$your-hashed-password-here

# Path to paperless-ngx consume directory (on host machine)
PAPERLESS_CONSUME_DIR=/volume1/docker/paperless/consume

# Allowed file extensions (comma-separated, no spaces)
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,tiff,txt,doc,docx,odt,rtf

# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800
